<Page x:Class="TachyDev1.View.ReservationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TachyDev1.View"
      xmlns:vm="clr-namespace:TachyDev1.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reservations">
    <Page.DataContext>
        <vm:ReservationsVM />
    </Page.DataContext>
    <StackPanel Orientation="Vertical"
                HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left">
            <Button>New</Button>
            <Button>Check In</Button>
            <Button>Check Out</Button>
            <Button>Cancel</Button>

            <StackPanel Orientation="Horizontal">
                <Label>Arrival Date: </Label>
                <DatePicker />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label>Departure Date: </Label>
                <DatePicker />
            </StackPanel>
        </StackPanel>

        <DataGrid ItemsSource="{Binding ReservationsCollection}" 
                  SelectedItem="{Binding SelectedReservation}"
                  SelectionChanged="ReservationsGrid_SelectionChanged">
        </DataGrid>

        <DataGrid ItemsSource="{Binding RoomReservationsCollection}"/>

    </StackPanel>
</Page>
