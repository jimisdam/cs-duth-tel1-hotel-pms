<Page x:Class="TachyDev1.View.ReservationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TachyDev1.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reservations">
    
    <StackPanel Orientation="Vertical"
                HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left">
            <Button>New</Button>
            <Button>Check In</Button>
            <Button>Check Out</Button>
            <Button>Cancel</Button>

            <StackPanel Orientation="Horizontal">
                <Label>Arrival Date: </Label>
                <DatePicker />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label>Departure Date: </Label>
                <DatePicker />
            </StackPanel>
        </StackPanel>

        <DataGrid x:Name="ReservationsGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" />
                <DataGridTextColumn Header="GuestsType" Binding="{Binding GuestsType}" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
                <DataGridTextColumn Header="DepositAmount" Binding="{Binding DepositAmount}" />
                <DataGridTextColumn Header="ArrivalDate" Binding="{Binding ArrivalDate}" />
                <DataGridTextColumn Header="DepartureDate" Binding="{Binding DepartureDate}" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Page>
